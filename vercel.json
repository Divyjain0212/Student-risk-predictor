{
  "version": 2,
  "builds": [
    {
      "src": "vercel-build.sh",
      "use": "@vercel/static-build",
      "config": { "distDir": "out" }
    }
  ],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "regions": ["iad1"],
  "rewrites": [
    {
      "source": "/uploads/(.*)",
      "destination": "/api/files/$1"
    }
  ],
  "build": {
    "env": {
      "TENSORFLOW_JS_SKIP": "true",
      "NODE_ENV": "production"
    }
  }
}